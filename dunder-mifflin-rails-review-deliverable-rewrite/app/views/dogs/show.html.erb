<h1>Doggy: <%= @dog.name %></h1>

<ul>
    <li>Breed: <%= @dog.breed %></li>
    <li>Age: <%= @dog.age %></li>
    <li>Employees: <ol>
    
        <% @dog.employees.each do |e| %>
            <li><%= link_to "#{e.first_name} #{e.last_name}", employee_path(e) %></li>        
        </ol>
    <% end %></li>

</ul>

<p>
<%= link_to "Adopt this dog", adopt_this_dog_path(@dog) %>
</p>